.Container {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 16px;
  margin: 16px 0;
  background-color: #e3f2fd;
  border: 1px solid #2196f3;
  border-radius: 4px;
  color: #1565c0;
}

.Icon {
  font-size: 24px;
  line-height: 1;
  flex-shrink: 0;
}

.Content {
  flex: 1;
}

.Title {
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 4px;
}

.Description {
  font-size: 13px;
  line-height: 1.5;
}
